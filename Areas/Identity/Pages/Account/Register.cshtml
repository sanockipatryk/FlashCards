@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-10 offset-1 col-sm-6 offset-sm-3 col-md-4 offset-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-light text-center">Create a new account</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mt-4">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label class="text-light" asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.Nickname" class="form-control" autocomplete="nickname" aria-required="true" />
                <label class="text-light" asp-for="Input.Nickname"></label>
                <span asp-validation-for="Input.Nickname" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label class="text-light" asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                    aria-required="true" />
                <label class="text-light" asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-info text-dark mt-2">Register</button>
        </form>
    </div>
