@model CardSetViewModel

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header text-light">
				<p class="modal-title h4">Delete this set?</p>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close">
				</button>
			</div>
			<div class="modal-body text-light">
				<p class="modal-title h3">@Model.Name</p>
				<p class="modal-title pt-4">You are about to delete this set with all of its contents. You will not be
					able to access it again.</p>
				<p class="modal-title pt-3 h5">Are you sure you want to delete this set?</p>
			</div>
			<div class="modal-footer d-flex">
				<form asp-action="DeleteSet" asp-route-id="@Model.Id" class="d-flex justify-content-between flex-grow-1">
				<button type="button" class="btn btn-secondary flex-grow-1 py-3" data-bs-dismiss="modal">Cancel</button>
				<button type="submit" id="deleteButton" class="btn btn-danger flex-grow-1 ms-2 py-3">
					Delete
				</button>
				</form>
			</div>
		</div>
	</div>
</div>
